<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
  <servlet>
    <servlet-name>GetUser</servlet-name>
    <servlet-class>GetUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Username_check</servlet-name>
    <servlet-class>Username_check</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Email_check</servlet-name>
    <servlet-class>Email_check</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Amka_check</servlet-name>
    <servlet-class>Amka_check</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetUser</servlet-name>
    <url-pattern>/GetUser</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>Username_check</servlet-name>
    <url-pattern>/Username_check</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Email_check</servlet-name>
    <url-pattern>/Email_check</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Amka_check</servlet-name>
    <url-pattern>/Amka_check</url-pattern>
  </servlet-mapping>


  <session-config>
    <session-timeout>
      30
    </session-timeout>
  </session-config>
</web-app>
